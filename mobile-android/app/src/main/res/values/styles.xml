<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Fully rounded image style for ShapeableImageView -->
    <style name="CircleImage" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Compatibility alias: some cached/intermediate resources may still reference
         the Material3 overlay name. Define it here to point to our CircleImage so
         AAPT can resolve it even if stale references exist. -->
    <style name="ShapeAppearanceOverlay.Material3.Corner.Full" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Compatibility alias for Material Components overlay SmallComponent
         to avoid AAPT errors if any stale reference exists -->
    <style name="ShapeAppearanceOverlay.MaterialComponents.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent" />
</resources>
